<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cjj.myapplication.mapper.UserMapper">
    <select id="selectAll" resultType="com.cjj.myapplication.model.User">
        SELECT * FROM user
    </select>
    <select id="selectUserByNameAndPassword" resultType="com.cjj.myapplication.model.User" >
        SELECT * FROM user WHERE username = #{username} and password = #{password} and is_deleted = 0;
    </select>
    <select id="getUserInfoById" resultType="com.cjj.myapplication.model.User" >
        SELECT * FROM user WHERE id=${userid} and is_deleted = 0;
    </select>
</mapper>
